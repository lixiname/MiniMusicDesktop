<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MiniMusicDesktop.ViewModels"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MiniMusicDesktop.Views.DownLoadMusicItemView"
			 x:DataType="vm:DownLoadMusicItemViewModel"
			 >
	<StackPanel Spacing="5" Width="200">
		<Border CornerRadius="10" ClipToBounds="True">
			<Panel Background="Gold">
				<Image Width="200" Stretch="Uniform" Source="{Binding Cover}"/>
				<Panel Height="200">
					<PathIcon Height="35" Width="35" Data="{StaticResource music_regular}" />
				</Panel>
			</Panel>
		</Border>
		<DockPanel >
			<TextBlock 
				DockPanel.Dock="Top"
				HorizontalAlignment="Center" Text="{Binding Title}"/>
			<DockPanel DockPanel.Dock="Bottom" >
				<TextBlock
					Margin="0 10 10 10"
					DockPanel.Dock="Right"
				    HorizontalAlignment="Right"
					Text="MB"/>
				<TextBlock
					Margin="10 10 10 10"
					DockPanel.Dock="Right"
					Text="{Binding Size}"/>
				<TextBlock
					Margin="10 10 0 10"
					DockPanel.Dock="Right"
				    HorizontalAlignment="Right"
					Text="大小"/>
				
			</DockPanel>
			
		</DockPanel>

	</StackPanel>
  
</UserControl>
